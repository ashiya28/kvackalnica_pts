{
  "name": "cassandra-sink-tumbling",
  "config": {
    "connector.class": "io.confluent.connect.cassandra.CassandraSinkConnector",
    "tasks.max": "1",
    "topics": "PROJECT_MUTATIONS_PER_MINUTE",

    "cassandra.contact.points": "cassandra1",
    "cassandra.port": "9042",
    "cassandra.keyspace": "kvackalnica",
    "cassandra.table.name": "project_mutations_per_minute",
    "cassandra.local.datacenter": "datacenter1",
    "cassandra.keyspace.create.enabled": "false",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",

    "value.converter": "io.confluent.connect.avro.AvroConverter",
    "value.converter.schema.registry.url": "http://schema-registry:8081",

    "confluent.topic.bootstrap.servers": "kafka-broker:29092",
    "confluent.topic.replication.factor": "1",

    "consumer.override.group.id": "cassandra-sink-tumbling-v10",
    "consumer.override.auto.offset.reset": "earliest",

    "transforms": "convertKey",
    "transforms.convertKey.type": "org.apache.kafka.connect.transforms.ValueToKey",
    "transforms.convertKey.fields": "CNT",

    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true"
  }
}
