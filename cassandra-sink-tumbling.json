{
  "name": "cassandra-sink-tumbling-v7",
  "config": {
    "connector.class": "io.confluent.connect.cassandra.CassandraSinkConnector",
    "tasks.max": "1",
    "topics": "USER_EVENTS_TUMBLING",

    "cassandra.contact.points": "cassandra1",
    "cassandra.port": "9042",
    "cassandra.keyspace": "kvackalnica",
    "cassandra.table.name": "user_events_tumbling",
    "cassandra.local.datacenter": "datacenter1",
    "cassandra.keyspace.create.enabled": "false",

    "key.converter": "org.apache.kafka.connect.converters.ByteArrayConverter",

    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",

    "topic.USER_EVENTS_TUMBLING.kvackalnica.user_events_tumbling.mapping": "user_id=value.USER_ID_PAYLOAD, window_start=value.WINDOW_START_PAYLOAD, window_end=value.WINDOW_END, event_count=value.EVENT_COUNT",

    "confluent.topic.bootstrap.servers": "kafka-broker:29092",
    "confluent.topic.replication.factor": "1",

    "consumer.override.auto.offset.reset": "earliest",

    "errors.tolerance": "none",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true"
  }
}
